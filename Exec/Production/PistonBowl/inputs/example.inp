pelec.diffuse_spec = 1
pelec.diffuse_enth = 1
pelec.sdc_iters = 2
#pelec.adaptrk_nsubsteps_guess=50
#pelec.adaptrk_nsubsteps_min=25
#pelec.adaptrk_nsubsteps_max=100
pelec.chem_integrator="ReactorCvode"
