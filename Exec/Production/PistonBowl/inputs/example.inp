pelec.lo_bc       =  "NoSlipWall"  "NoSlipWall"  "NoSlipWall"
pelec.hi_bc       =  "NoSlipWall"  "NoSlipWall"  "Hard"

# WHICH PHYSICS
pelec.do_hydro = 1
pelec.do_mol = 1
pelec.do_react = 1
pelec.diffuse_temp = 1
