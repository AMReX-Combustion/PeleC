{
     "__comment": "Modified from vscode-cpptools's Extension/package.json gcc rule",
     "problemMatcher": [
         {
             "owner": "cppcheck-problem-matcher",
             "pattern": [
                 {
                     "regexp": "^(.*):(\\d+):(\\d+):\\s+(?:fatal\\s+)?(error|performance|portability|style|warning):\\s+(.*)$",
                     "file": 1,
                     "line": 2,
                     "column": 3,
                     "severity": 4,
                     "message": 5
                 }
             ]
         }
     ]
} 
